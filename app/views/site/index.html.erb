<div class="large-8 columns">
  <% if current_user %>
    <h2>Latest Bookmarks</h2>
    <table class="responsive">
      <thead>
        <tr>
          <th>Url</th>
          <th>User</th>
        </tr>
      </thead>

      <tbody>
        <% @bookmarks.each do |bookmark| %>
          <tr>
            <td><%= link_to bookmark.title, bookmark.url %></td>
            <td><%= link_to bookmark.user.username, profile_path(bookmark.user) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= paginate @bookmarks %>
  <% else %>
    <div class="panel">
      <h1>Share your bookmarks and Save your personal accounts information. </h1>
      <p>A simple app to track and share your beloved bookmarks with others.</p>
      <%= link_to "Get started today", new_user_registration_path, :class => "button button-large" %>
    </div>

    <hr>
  <% end %> 
</div>
<div class="large-4 columns">
  <h2>Latest News</h2>
  <ul>
  <% @entry.each do |feed|%>
    <li style="list-style:none;"><%= link_to "#{feed.title.sanitize}", "#{feed.url}",:target => "_blank" %></li>
  <%end%>
  </ul>
</div>  
